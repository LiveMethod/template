doctype html
html
  head
    meta(charset="UTF-8")
    title Internet Website 2001
    link(rel="stylesheet" href="styles/main.css")

    script(src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.4/jquery.min.js")
    script(src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.4.1/jquery.easing.min.js")

    script.
      var speed = 600;
      var ease = 'easeOutExpo';

      $(document).ready(function(){

        ///////////////////////////////
        //- Intro page

        $('.page').not('#intro').css('left','375px');

        $('#btn-start').click(function(){
          $('#intro').animate({"left":"-375px"}, speed, ease)
          $('#doc-select').animate({"left":"0px"}, speed, ease)
        });

        ///////////////////////////////
        //- Pick docs page

        //- Show more doc types
        $('#show-docs').click(function(){
          $(this).fadeOut();
          $('#more-docs').slideDown();
        });

        //- Select a doc type
        $('#doc-select .radio-card').click(function(){
          // remove existing selections
          $('#doc-select .radio-card--selected').removeClass('radio-card--selected');

          // add current selection
          $(this).addClass('radio-card--selected');

          // remove block on continue button
          $('#docs-continue').removeClass('is-disabled');
        });

        //-  continue w/ selected doc
        $('#docs-continue').click(function(){
          if( $(this).hasClass('is-disabled') ){
            alert('Select a document to continue.')
          } else {
            $('.content').scrollTop(0);
            $('#capture')
              .css({'top':'667px', 'left':'0px'})
              .animate({"top":"0px"}, speed * 0.75, ease);
          }
        });
        ///////////////////////////////
        //- capture
        $('#modal-dismiss').click(function(){
          $('#capture .modal').remove();
        });


      });
  body
    .phone-mock
      .head-bar
        .system
        .header
      .content
        .page.pad-md(id="intro")
          .h3
